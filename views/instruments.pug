extends layout

block content
  h1= title
    - let results = [{ instrument_name: "Guitar", manufacturer: "Fender", price: 599 },{ instrument_name: "Drums", manufacturer: "Pearl", price: 899 },{ instrument_name: "Keyboard", manufacturer: "Yamaha", price: 499 }]

  .container-fluid
    .row
      each instrument in results
        .col-sm-2
          h3= instrument.instrument_name
          p Manufacturer: #{instrument.manufacturer}
          p Price: $#{instrument.price}